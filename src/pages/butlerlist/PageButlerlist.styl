.butlerlist
    display block
    .item
        height 140px
        img
            width 100%
            height 165px
        .desc
            position relative
            top -70px
            .name
                display block
                padding-left 10px
                margin-bottom 5px
                color white
                font-size 20px
            .subTitle
                display inline-block
                padding 5px 0 5px 10px
                color white
                background-color #38adff
                opacity 0.8
                font-size 15px
            .rate
                display inline
                color yellow
                margin-left 10px
                margin-right 10px

        .head
            padding 20px 20px 0px 10px
            &:after
                clear both
                content ""
            .avatar
                display inline-block
                img
                    height 60px
                    width 60px
                    border-radius 50%
            .text
                display inline-block
                vertical-align top
                margin-top 5px
                margin-left 20px
                .name
                    font-size 16px
                .sub-title
                    margin-top 10px
                    font-size 13px
            .button
                float right
                width 70px
                height 40px
                line-height 40px
                border-radius 5px
                color white
                background-color #38adff
                text-align center
        .intro
            margin-top 10px
            margin-left 10px
            margin-right 10px
            padding 10px
            line-height 16px
            background-color #eeeeee
            color #323334
            border-radius 10px

.text-ellipsis
    text-overflow ellipsis
    white-space nowrap
    overflow hidden

