        .head
            padding 20px 20px 0px 10px
            &:after
                clear both
                content ""
            .avatar
                display inline-block
                img
                    height 60px
                    width 60px
                    border-radius 50%
            .text
                display inline-block
                vertical-align top
                margin-top 5px
                margin-left 20px
                .title
                  .name
                      font-size 18px
                  .loc
                      margin-left 10px
                      font-size 12px
                      background-color #06b3bd
                      color white
                      padding 1px 2px
                      border solid 0.5px #06b3bd
                      border-radius 3px
                .sub-title
                    color #555555
                    margin-top 10px
                    font-size 13px
                    //border solid 0.5px #555555
                    //padding 3px 5px
                    border-radius 5px
            .button
                float right
                width 70px
                height 30px
                line-height 30px
                font-size 13px
                border-radius 5px
                color #06b3bd
                background-color white
                border solid 0.5px #06b3bd
                text-align center
        .intro
            margin-top 10px
            margin-left 10px
            margin-right 10px
            padding 10px
            line-height 16px
            background-color #ecf0f5
            color #777777
            border-radius 10px

