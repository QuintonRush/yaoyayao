.makecomment
    display block
    .t-group-list
        margin-top 10px
        margin-bottom 10px
        &:active
            background-color #d9d9d9
        .content
            padding 10px
            .sec1
                .avatar
                    display inline
                    vertical-align top
                    margin-right 20px
                    height 50px
                    width 50px
                    border-radius 50%
                .text
                    vertical-align top
            .sec2
                padding-left 10px
                padding-bottom 20px
                .pic
                    display inline-block
                    width 70px
                    height 70px
                    border solid 0.5px #cccccc
                    text-align center
                    .t-icon
                        margin-top 14px
                .text
                    display inline
                    margin-left 20px
                    color #cccccc
    .submit
        width 100%
        height 60px
        line-height 60px
        background-color #38adff
        position fixed
        bottom 0
        color white
        font-size 18px
        text-align center
