.hometab
    display block
    .sections
        .section
            .head
                height 50px
                line-height 50px
                padding-left 10px
                .icon
                    height 32px
                    width 32px
                    border-radius 50%
                    margin-top 10px
                    margin-right 10px
                    float left
                .title
                    color #555555
                    float left
                    font-size 16px
                .right
                    float right
                    .tip
                        display inline
                        font-size 14px
                    .t-icon
                        display inline
            .head
                &:after
                    clear both
            .butlers
                height 100px
                .butler
                    float left
                    margin 10px 12px
                    .avatar
                        height 60px
                        width 60px
                        border-radius 50%
                    .name
                        display block
                        width 60px
                        text-align center
                        margin-top 5px
                        color #555555
                        font-size 12px

